<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Signup">



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:paddingTop="20dp"
                android:background="@drawable/gradient">

                <ImageView
                    android:id="@+id/pgkaname1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/loginname"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Signup Form"
                    android:layout_below="@+id/pgkaname1"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:orientation="vertical"
                android:layout_marginTop="-100dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/loginlogo"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome"
                            android:textColor="#E44437"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New User"
                            android:layout_marginLeft="8dp"
                            android:textColor="#36002F"
                            />

                    </LinearLayout>

                </RelativeLayout>



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient's Details"
                    android:textColor="#36002F"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="text"
                    android:background="@drawable/textbox"
                    android:hint="First Name"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="text"
                    android:background="@drawable/textbox"
                    android:hint="Last Name"
                    />

                <Spinner
                    android:id="@+id/ageSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="text"
                    android:background="@drawable/textbox"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caretaker's Details"
                    android:textColor="#36002F"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="text"
                    android:background="@drawable/textbox"
                    android:hint="First Name"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="text"
                    android:background="@drawable/textbox"
                    android:hint="Last Name"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="text"
                    android:background="@drawable/textbox"
                    android:hint="Email-id"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="textPassword"
                    android:background="@drawable/textbox"
                    android:hint="Password"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:inputType="textPassword"
                    android:background="@drawable/textbox"
                    android:hint="Confirm Password"
                    />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree the"
                    android:textSize="18dp"
                    android:textColor="#36002F"
                    />
                <TextView
                    android:id="@+id/tnc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textSize="18dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#E44437"
                    />

            </LinearLayout>

        </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    >
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:text="Sign Up >"
                        android:textSize="10dp"
                        android:textColor="#36002F"
                        android:background="@drawable/btn1"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>


    </LinearLayout>

</ScrollView>

            </LinearLayout>

</LinearLayout>
